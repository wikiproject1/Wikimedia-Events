/* Card layout to match the desired screenshot style */

.event-card { border-radius: 12px; }
.event-card .card-body { padding: 1.25rem 1.25rem; }

.event-detail {
  display: grid;
  grid-template-columns: 1fr auto; /* left info, right dates */
  gap: 1.25rem 2rem;
  align-items: start;
}

.detail-left {
  display: grid;
  grid-template-columns: 1fr 1fr; /* two columns for fields */
  gap: 1rem 2rem;
}

.detail-section {
  display: flex;
  flex-direction: column;
  gap: .5rem;
}

.detail-label {
  font-weight: 700;
  color: #495057;
  display: flex;
  align-items: center;
  gap: .5rem;
}

.detail-label i { color: #6c757d; }

.pill {
  display: inline-block;
  background: #e9ecef;
  border: 1px solid #dee2e6;
  border-radius: 999px;
  padding: .35rem .6rem;
  font-size: .875rem;
  line-height: 1;
  color: #212529;
  margin-right: .35rem;
  margin-bottom: .35rem;
}

.badge.participation-online   { background-color: #0d6efd !important; }
.badge.participation-in-person{ background-color: #198754 !important; }
.badge.participation-hybrid   { background-color: #6c757d !important; }

.right-col {
  min-width: 240px;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: .75rem;
}

.right-col .side-label { font-size: .9rem; color: #6c757d; margin-bottom: .15rem; }
.right-col .side-value { font-weight: 800; font-size: 1.25rem; }

.view-btn { display: inline-flex; align-items: center; gap: .5rem; padding: .6rem 1rem; }

.organizer-chip {
  background: #f8f9fa;
  border: 1px solid #dee2e6;
  color: #212529;
  border-radius: 999px;
  padding: .25rem .6rem;
  font-size: .85rem;
  margin-right: .35rem;
  margin-bottom: .35rem;
}

.event-title { display: inline-flex; align-items: center; gap: .5rem; }

@media (max-width: 992px) {
  .event-detail { grid-template-columns: 1fr; }
  .right-col { align-items: flex-start; }
}
